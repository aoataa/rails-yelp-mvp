<h1>  </h1>
<h2> <%= @restaurant.name %></h2>
<h4> <%= @restaurant.category %> food</h4>
<h2>---</h2>
<h5> <%= @restaurant.address %></h5>
<h5><%= @restaurant.phone_number %></h5>
<% if @restaurant.reviews.empty? %>
  <p>No reviews for this restaurant</p>
<% else %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %>
      </li>
    <% end %>
  </ul>
<% end %>
<h5><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %></h5>


